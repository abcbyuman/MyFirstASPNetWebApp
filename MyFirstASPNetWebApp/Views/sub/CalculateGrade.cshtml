@model CalculateGradeModel;

<p>Welcome to..</p>
<h3>The Grade Calculator</h3>
<br />
<h5>Enter your score for each category!</h5>
<h6>(as a percent, without the percent sign. e.g. 70% would be entered as 70) then hit GO!!</h6>
<br />
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="assignments" type="number"  /><br />
    <label>Group Project:</label>
    <input id="groupProject" asp-for="groupProject" type="number" /><br />
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="quizzes"type="number"  /><br />
    <label>Midterm Exam:</label>
    <input id="midtermExam" asp-for="midtermExam" type="number" /><br />
    <label>Final Exam:</label>
    <input id="finalExam" asp-for="finalExam"type="number"  /><br />
    <label>INTEX:</label>
    <input id="intex" asp-for="intex" type="number" /><br />
    <br />
    <input id="btnSend" type="submit" value="GO!!" />
    <br />
    <div asp-validation-summary="All"></div>
    <br />
    <label>Your Calculated Score: </label>
    <h2 id="output1"> </h2>
    <br /><br /><br />
</form>
<p id="output1"></p>

